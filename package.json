{
  "name": "sales",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap-cloud-sdk/connectivity": "^3.18.0",
    "@sap-cloud-sdk/http-client": "^2.9.0",
    "@sap-cloud-sdk/resilience": "^3.17.0",
    "@sap/cds": "^7.9.4",
    "@sap/cds-hana": "^2",
    "@sap/xsenv": "^5.3.0",
    "@sap/xssec": "^4.2.4",
    "axios": "^1.7.7",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "passport": "^0.7.0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/eslint-plugin-cds": "^3",
    "@sap/ux-specification": "^1.120.17",
    "eslint": "^9",
    "rimraf": "^5.0.5"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-salesapp": "cds watch --open salesapp/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy sales --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db": "hana",
      "auth": "dummy",
      "fiori": {
        "bypass_draft": true
      },
      "destinations": true,
      "TEST_DEST1": {
        "kind": "odata-v2",
        "csrf": true,
        "csrfInBatch": true,
        "credentials": {
          "destination": "TEST_DEST"
        },
        "destinationOptions": {
          "selectionStrategy": "alwaysProvider",
          "jwt": null
        }
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/salesapp"
  ]
}
