{
  "name": "sales",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^8",
    "express": "^4",
    "@cap-js/hana": "^1"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.6",
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "rimraf": "^5.0.5",
    "@sap/ux-specification": "UI5-1.129"
  },
  "scripts": {
    "start": "cds-serve",
    "watch-salesapp": "cds watch --open salesapp/webapp/index.html?sap-ui-xx-viewCache=false",
    "undeploy": "cf undeploy sales --delete-services --delete-service-keys --delete-service-brokers",
    "build": "rimraf resources mta_archives && mbt build --mtar archive",
    "deploy": "cf deploy mta_archives/archive.mtar --retries 1"
  },
  "cds": {
    "requires": {
      "db" : "hana",
      "fiori": {
        "bypass_draft": true
      }
    },
    "sql": {
      "native_hana_associations": false
    }
  },
  "sapux": [
    "app/salesapp"
  ]
}
